# http://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[config.ru]
indent_style = space
indent_size = 2

[Gemfile]
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4

[*.yml,{tf,tf.example}]
indent_style = space
indent_size = 2
